// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id               String     @id @default(uuid())
  user_name        String     @unique
  name             String
  email            String
  phoneNo          Int
  passout_year     String
  location         String
  activationKey    String
  activationSentAt String
  verified         Boolean    @default(false)
  branchId         String
  college          Colleges   @relation(fields: [collegeId], references: [id])
  collegeId        String
  cart             Cart[]
  products         Products[]
  profile_pic      Images?
  Branches         Branches?  @relation(fields: [branchesId], references: [id])
  branchesId       String?
}

model Products {
  id          String     @id @default(uuid())
  name        String
  price       Decimal
  description String
  location    String
  category    Categories @relation(fields: [categoryId], references: [id])
  categoryId  String
  carts       Cart[]     @relation("CartToProduct")
  seller      Users      @relation(fields: [sellerId], references: [id])
  sellerId    String
  sold        Boolean    @default(false)
  images      Images[]
}

model Cart {
  id       String     @id @default(uuid())
  products Products[] @relation("CartToProduct")
  user     Users      @relation(fields: [userId], references: [id])
  userId   String     @unique
}

model Images {
  id        String   @id @default(uuid())
  url       String
  product   Products @relation(fields: [productId], references: [id])
  productId String
  users     Users    @relation(fields: [userId], references: [id])
  userId    String   @unique
}

model Categories {
  id       String     @id @default(uuid())
  name     String
  products Products[]
}

model Colleges {
  id       String     @id @default(uuid())
  name     String
  branches Branches[] @relation("CollegeBranch")
  users    Users[]
}

model Branches {
  id       String     @id @default(uuid())
  name     String
  colleges Colleges[] @relation("CollegeBranch")
  users    Users[]
}
