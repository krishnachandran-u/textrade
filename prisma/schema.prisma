// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id               String     @id @default(uuid())
  username         String     @unique
  name             String?
  note             String?
  email            String
  phoneNo          BigInt?
  passoutyear      String?
  location         String?
  activationKey    String?
  password         String
  activationSentAt DateTime?
  verified         Boolean    @default(false)
  branchId         String
  college          Colleges   @relation(fields: [collegeId], references: [id])
  collegeId        String
  cart             Cart[]
  products         Products[]
  profile_pic      String?
  branch           Branches?  @relation(fields: [branchId], references: [id])
}

model Products {
  id          String     @id @default(uuid())
  name        String
  price       Decimal
  description String?
  location    String?
  dateAdd     DateTime   @default(now())
  category    Categories @relation(fields: [categoryId], references: [id])
  categoryId  String
  carts       Cart[]     @relation("CartToProduct")
  seller      Users      @relation(fields: [sellerId], references: [id])
  sellerId    String
  sold        Boolean    @default(false)
  images      Images[]
}

model Cart {
  id       String     @id @default(uuid())
  products Products[] @relation("CartToProduct")
  user     Users      @relation(fields: [userId], references: [id])
  userId   String     @unique
}

model Images {
  id        String   @id @default(uuid())
  url       String   @unique
  product   Products @relation(fields: [productId], references: [id])
  productId String
}

model Categories {
  id       String     @id @default(uuid())
  name     String     @unique
  products Products[]
}

model Colleges {
  id       String     @id @default(uuid())
  name     String     @unique
  branches Branches[] @relation("CollegeBranch")
  users    Users[]
}

model Branches {
  id       String     @id @default(uuid())
  name     String     @unique
  colleges Colleges[] @relation("CollegeBranch")
  users    Users[]
}
